        "ClearBitInSignal": {
            "properties": {
                "bitNumber": {
                    "type": "number"
                },
                "signal": {
                    "description": "Name of the ioBroker object",
                    "type": "string"
                },
                "type": {
                    "const": "ClearBitInSignal",
                    "type": "string"
                }
            },
            "type": "object"
        },
        "DecrementSignalValue": {
            "properties": {
                "signal": {
                    "description": "Name of the ioBroker object",
